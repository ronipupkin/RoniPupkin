doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Upload new item
    link(rel='stylesheet', href='../static/StyleSheet.css')
    script(defer='', src='../static/ProjectJS.js')
  body
    #NI_container
      #header
        header
          nav.nav
            ul.nav-list
              li.list-item
                a(href='./openingScreen.html') Log Out
              li.list-item
                a(href='./Update profile.html') Update Profile
              li.list-item
                a(href='./about.html') About Us
      #Container_Logo
        img#logo(src='../static/logo.png', alt='Logo')
      #Container_Header
        | Upload a new item for auction
      #Upload.info
        form(action='', method='post', onsubmit='return LastDateCheck()')
          // Update action
          table(cellpadding='10', cellspacing='3')
            tbody
              tr
                td
                  label#Labels_Id(for='ItemsName') Item&rsquo;s name: 
                |  
                td
                  input#ItemsName.input_Upload(type='text', required='', name='ItemsName', maxlength='12', placeholder='(Max Length: 12)')
                  br
              |  
              tr
                td
                  label#Labels_Id(for='LastDate') Last date for suggestions: 
                |  
                td
                  input#LastDate.input_Upload(type='date', required='', name='LastDate')
                  br
              |  
              tr
                td
                  label#Labels_Id(for='Category') Category: 
                |  
                td
                  select#CategoryList.input_Upload(name='Category', required='')
                    option(value='') Choose Category
                    option(value='MusicalInstruments') Musical Instruments
                    option(value='Furniture') Furniture
                    option(value='Books') Books
                    option(value='Clothing') Clothing
                    option(value='Comic') Comic
                    option(value='Cameras') Cameras
                    option(value='Headphones') Headphones
                    option(value='Watchs') Watchs
                    option(value='Else') Else
                  br
              |  
              tr
                td
                  label#Labels_Id(for='ItemsPicture') Upload Items&apos;s Picture:
                |  
                td
                  input#ItemsPicture.input_Upload(type='file', name='ItemsPicture', accept='image/png, image/gif, image/jpeg')
                  br
              |  
              tr
                td
                  label#Labels_Id(for='Description') Description: 
                |  
                td
                  textarea#Description.input_Upload(name='Description', cols='25', rows='1', maxlength='24', placeholder='(Max Length: 24)')
                  br
          table(cellpadding='8', cellspacing='3')
            tbody
              tr
                td
                  button.Upload_button(type='submit', onclick='') Upload item for auction
      .footer_right
        footer
          a(href='./ContactUs.html')   Contact Us
      .footer_left
        footer
